---
const researchTopics = [
  {
    id: "01",
    area: "Mathematical Optimization",
    detail: "数理最適化。修士課程における主要な研究テーマとして、数理最適化を核とした信号処理・データ解析を探求予定。",
    status: "Upcoming Focus"
  },
  {
    id: "02",
    area: "Statistical Mechanics / Collective Motion",
    detail: "学士論文の研究内容。自己駆動粒子系（Vicsek Model, Inertial Spin Model）における非相反作用と集団運動のダイナミクス解析。",
    status: "Current Research"
  },
  {
    id: "03",
    area: "Deep Learning Dynamics",
    detail: "準学士論文の研究内容。TransformerモデルにおけるGrokking現象の再現およびパラメータ変動の研究。",
    status: "Published / Thesis"
  }
];

const technicalSkills = [
  { name: "Python (PyTorch, NumPy, Pandas)", level: 70 },
  { name: "C, C++, C#", level: 50 },
  { name: "Machine Learning / Data Science", level: 60 },
  { name: "Mathematical Modeling / Simulation", level: 50 }
];
---

<section id="skills" class="relative border-b border-grid bg-white">
  <div class="absolute top-4 right-4 text-[10px] font-mono text-gray-400">
    SECTION: CAPABILITIES // ID: 002
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2">
    
    <div class="p-8 md:p-16 border-b md:border-b-0 md:border-r border-grid">
      <h2 class="text-2xl font-bold mb-10 flex items-center gap-3">
        <span class="text-primary font-mono text-lg">01.</span>
        Research Interests
      </h2>

      <div class="space-y-8">
        {researchTopics.map((topic) => (
          <div class="group">
            <div class="flex items-center justify-between mb-2 gap-4">
              <h3 class="text-lg font-bold group-hover:text-primary transition-colors">
                {topic.area}
              </h3>
              <span class="font-mono text-xs text-primary border border-primary px-2 py-0.5 rounded-full opacity-70 whitespace-nowrap text-center">
                {topic.status}
              </span>
            </div>
            <p class="text-sm text-gray-600 leading-relaxed pl-4 border-l-2 border-grid group-hover:border-primary transition-colors">
              {topic.detail}
            </p>
          </div>
        ))}
      </div>
    </div>

    <div class="p-8 md:p-16 bg-gray-50/50">
      <h2 class="text-2xl font-bold mb-10 flex items-center gap-3">
        <span class="text-primary font-mono text-lg">02.</span>
        Engineering Stack
      </h2>
      <div class="space-y-8 mt-2">
        {technicalSkills.map((skill) => (
          <div>
            <div class="flex justify-between mb-2 font-mono text-xs text-gray-500">
              <span>{skill.name}</span>
              <span>{skill.level}%</span>
            </div>
            <div class="h-2 w-full bg-gray-200 overflow-hidden">
              <div class="h-full bg-primary" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
      <div class="mt-12 pt-8 border-t border-dashed border-gray-300">
        <p class="font-mono text-xs text-gray-400 mb-4">OTHER TOOLS & ENVIRONMENTS:</p>
        <div class="flex flex-wrap gap-2">
          {["Git/GitHub", "VS Code", "LaTeX"].map((tool) => (
            <span class="text-xs border border-gray-300 px-3 py-1 text-gray-600 bg-white">
              {tool}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>