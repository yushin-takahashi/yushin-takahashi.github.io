<section id="history" class="relative bg-white">
  <div class="absolute top-4 right-4 text-[10px] font-mono text-gray-400">
    SECTION: LOGS // ID: 004
  </div>

  <div class="max-w-screen-xl mx-auto px-8 md:px-16 py-20">
    <h2 class="text-2xl font-bold mb-12 flex items-center gap-3">
      <span class="text-primary font-mono text-lg">04.</span>
      History & Achievements
    </h2>

    <div class="overflow-x-auto border border-grid">
      <table class="w-full text-left border-collapse text-sm">
        <thead class="bg-gray-50 text-gray-500 font-mono text-xs uppercase tracking-wider border-b border-grid">
          <tr>
            <th class="p-4 w-32 border-r border-grid">Date</th>
            <th class="p-4 w-32 border-r border-grid">Type</th>
            <th class="p-4 border-r border-grid">Title / Event</th>
            <th class="p-4 hidden md:table-cell">Detail</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-grid text-gray-700">
          {historyData.map((item) => (
            <tr class="hover:bg-gray-50/50 transition-colors group">
              <td class="p-4 font-mono text-gray-500 border-r border-grid">{item.date}</td>
              <td class="p-4 border-r border-grid">
                <span class={`inline-block px-2 py-0.5 text-[10px] border rounded font-mono
                  ${item.type === 'Award' ? 'text-amber-700 border-amber-200 bg-amber-50' : 
                    item.type === 'Research' ? 'text-blue-700 border-blue-200 bg-blue-50' : 
                    item.type === 'Experience' ? 'text-emerald-700 border-emerald-200 bg-emerald-50' : 
                    'text-gray-600 border-gray-200 bg-gray-100'}`}>
                  {item.type}
                </span>
              </td>
              <td class="p-4 font-bold group-hover:text-primary transition-colors border-r border-grid">
                {item.title}
                <div class="md:hidden text-xs text-gray-400 font-normal mt-1">{item.detail}</div>
              </td>
              <td class="p-4 text-gray-500 hidden md:table-cell">{item.detail}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>