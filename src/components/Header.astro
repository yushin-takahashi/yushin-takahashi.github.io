---
const navItems = [
  { name: 'About', href: '#about' },
  { name: 'Works', href: '#works' },
  { name: 'History', href: '#history' },
  // { name: 'Contact', href: '#contact' }, // 必要に応じて有効化
];
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 border-b-2 border-primary">
  <div class="max-w-screen-xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href="/" class="text-lg font-bold tracking-wider hover:opacity-70 transition-opacity">
      Yushin Takahashi
    </a>

    <nav class="hidden md:flex gap-8">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-sm font-medium hover:text-primary transition-colors relative group"
        >
          {item.name}
          <span class="absolute -bottom-1 left-0 w-0 h-[1px] bg-primary transition-all group-hover:w-full"></span>
        </a>
      ))}
    </nav>

    <button class="md:hidden text-text hover:text-primary">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>
</header>